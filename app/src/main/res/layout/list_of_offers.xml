<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical" />

    <ImageView
        android:id="@+id/add_offer"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="60dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:onClick="startOfferCreationActivity"
        android:src="@drawable/floating_action_bar" />

    <ImageView
        android:id="@+id/delete_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_above="@+id/add_offer"
        android:layout_alignLeft="@+id/add_offer"
        android:layout_alignStart="@+id/add_offer"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:onClick="deleteSelectedOffers"
        android:src="@drawable/trash_empty" />

</RelativeLayout>


